@{
    ViewData["Title"] = " Municipality of Port Elizabeth Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-5"> Municipality of Port Elizabeth Dashboard</h2>

    <div class="row g-4">
        <!-- Report Issues -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 h-100 hover-shadow">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Report Issues</h5>
                        <p class="card-text">Submit and track service-related issues in your area.</p>
                    </div>
                    <a asp-controller="Issues" asp-action="Index" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Local Events and Announcements -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 bg-light h-100">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Local Events & Announcements</h5>
                        <p class="card-text">Stay informed about community events and updates.</p>
                    </div>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Service Request Status -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 bg-light h-100">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Service Request Status</h5>
                        <p class="card-text ">Track the progress of your service requests.</p>
                    </div>
                    <a asp-controller="ServiceRequest" asp-action="Index" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Optional: hover effect for active card */
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease-in-out;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }
</style>
